<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <company.tap.tapuilibrary.uikit.atoms.TapTextViewNew
        android:id="@+id/textview_CardTitle"
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:gravity="center_vertical"
        android:text="CARD INFORMATION"
        android:textAllCaps="true"
        android:textColor="#9F9F9F"
        android:textSize="@dimen/font_size_11sp"
        android:visibility="gone" />


    <FrameLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:id="@+id/linear_blurry"
        android:layout_height="wrap_content">

        <company.tap.tapuilibrary.uikit.organisms.TapPaymentInput
            android:id="@+id/tap_payment_input"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layoutDirection="locale" />


    </FrameLayout>



    <company.tap.tapuilibrary.uikit.views.TabAnimatedActionButton
        android:id="@+id/pay"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_36sdp"
        android:visibility="gone"
        android:layout_marginHorizontal="@dimen/_5sdp"
        />

    <FrameLayout
        android:id="@+id/inline_container1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:visibility="invisible" />


</LinearLayout>